{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "http://localhost:5500/api/logs"
        }
      },
      {
        "Name": "RollingFile",
        "Args": { "pathFormat": "{Date}.log" }
      }
    ],
    "Properties": {
      "Application": "Web"
    }
  }
}
